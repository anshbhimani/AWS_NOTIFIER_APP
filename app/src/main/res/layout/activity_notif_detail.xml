<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_dark"
    android:padding="20dp"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            style="@style/OneUI.TitleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/oneui_text_primary"
            android:layout_marginBottom="12dp" />

        <!-- Topic chip -->
        <TextView
            android:id="@+id/topic"
            android:background="@drawable/chip_bg"
            android:textColor="@color/oneui_chip_text"
            android:padding="8dp"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Message card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/messageCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:background="@drawable/oneui_card"
            android:padding="0dp">

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textColor="@color/oneui_text_primary"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

        <!-- Time -->
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/oneui_text_secondary"
            android:textSize="13sp" />

    </LinearLayout>

</ScrollView>
