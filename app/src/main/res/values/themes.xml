<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base App Theme -->
    <style name="Theme.AWSNotifier" parent="Theme.AWSNotifier.Dark" />

    <!-- Dark Theme -->
    <style name="Theme.AWSNotifier.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <!-- Dark No Action Bar -->
    <style name="Theme.AWSNotifier.Dark.NoActionBar" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.AWSNotifier.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.AWSNotifier</item>
    </style>

</resources>
